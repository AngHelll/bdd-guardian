{
  "name": "bdd-guardian",
  "displayName": "BDD Guardian",
  "description": "Guard and navigate your BDD steps across Reqnroll, SpecFlow, and Cucumber with CodeLens, Go to Definition, and diagnostics",
  "version": "0.4.1",
  "publisher": "anghelll-bdd-guardian",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#667eea",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "reqnroll",
    "specflow",
    "gherkin",
    "cucumber",
    "bdd",
    "feature",
    "step definitions",
    "bindings"
  ],
  "activationEvents": [
    "onLanguage:gherkin",
    "onLanguage:feature",
    "workspaceContains:**/*.feature"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reqnrollNavigator.reindex",
        "title": "BDD Guardian: Reindex Workspace"
      },
      {
        "command": "reqnrollNavigator.showBindings",
        "title": "BDD Guardian: Show All Bindings"
      },
      {
        "command": "reqnrollNavigator.goToBinding",
        "title": "BDD Guardian: Go to Step Binding"
      },
      {
        "command": "reqnrollNavigator.showStatistics",
        "title": "BDD Guardian: Show Statistics"
      },
      {
        "command": "reqnrollNavigator.showAmbiguousMatches",
        "title": "BDD Guardian: Show Ambiguous Matches"
      },
      {
        "command": "reqnroll-navigator.showProviderReport",
        "title": "BDD Guardian: Show Provider Detection Report"
      },
      {
        "command": "reqnroll-navigator.goBack",
        "title": "BDD Guardian: Go Back",
        "icon": "$(arrow-left)"
      },
      {
        "command": "reqnroll-navigator.goForward",
        "title": "BDD Guardian: Go Forward",
        "icon": "$(arrow-right)"
      },
      {
        "command": "reqnroll-navigator.showHistory",
        "title": "BDD Guardian: Show Navigation History"
      },
      {
        "command": "reqnroll-navigator.clearHistory",
        "title": "BDD Guardian: Clear Navigation History"
      },
      {
        "command": "bddGuardian.copyDebugReport",
        "title": "BDD Guardian: Copy Debug Report"
      },
      {
        "command": "bddGuardian.coach.toggle",
        "title": "BDD Guardian: Toggle Coach Mode"
      },
      {
        "command": "bddGuardian.coach.showRules",
        "title": "BDD Guardian: Show Coach Rules"
      },
      {
        "command": "reqnrollNavigator.goToStepUsage",
        "title": "BDD Guardian: Go to Step Usage"
      },
      {
        "command": "reqnrollNavigator.showBindingUsages",
        "title": "BDD Guardian: Show Binding Usages"
      },
      {
        "command": "bddGuardian.coach.showHealthScore",
        "title": "BDD Guardian: Show Health Score"
      }
    ],
    "keybindings": [
      {
        "command": "reqnroll-navigator.goBack",
        "key": "alt+left",
        "mac": "alt+left",
        "when": "editorTextFocus && resourceExtname == .feature"
      },
      {
        "command": "reqnroll-navigator.goForward",
        "key": "alt+right",
        "mac": "alt+right",
        "when": "editorTextFocus && resourceExtname == .feature"
      },
      {
        "command": "reqnroll-navigator.showHistory",
        "key": "alt+h",
        "mac": "alt+h",
        "when": "editorTextFocus && resourceExtname == .feature"
      }
    ],
    "configuration": {
      "title": "BDD Guardian",
      "properties": {
        "bddGuardian.displayLanguage": {
          "type": "string",
          "enum": ["en", "es"],
          "default": "en",
          "description": "%config.displayLanguage.description%"
        },
        "bddGuardian.gutterIcons.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show gutter icons for step status (\u2713 bound, \u2717 unbound, ! ambiguous)"
        },
        "bddGuardian.hoverDetails.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show enriched hover information with binding details and code preview"
        },
        "reqnrollNavigator.caseInsensitive": {
          "type": "boolean",
          "default": false,
          "description": "Enable case-insensitive step matching"
        },
        "reqnrollNavigator.tagFilter": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Filter steps by tags (e.g., ['@P0', '@smoke']). Affects CodeLens and Diagnostics only."
        },
        "reqnrollNavigator.tagFilterMode": {
          "type": "string",
          "enum": [
            "include",
            "exclude"
          ],
          "default": "include",
          "description": "Tag filter mode: 'include' shows only matching tags, 'exclude' hides matching tags"
        },
        "reqnrollNavigator.featureGlob": {
          "type": "string",
          "default": "**/*.feature",
          "description": "Glob pattern for feature files"
        },
        "reqnrollNavigator.bindingsGlob": {
          "type": "string",
          "default": "**/*.cs",
          "description": "Glob pattern for binding files"
        },
        "reqnrollNavigator.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/bin/**",
            "**/obj/**",
            "**/node_modules/**"
          ],
          "description": "Patterns to exclude from indexing"
        },
        "reqnrollNavigator.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable CodeLens indicators for step bindings"
        },
        "reqnrollNavigator.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostics for unbound/ambiguous steps"
        },
        "reqnrollNavigator.enableDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Enable visual decorations for steps (border and overview ruler)"
        },
        "reqnrollNavigator.navigationHistorySize": {
          "type": "number",
          "default": 50,
          "minimum": 10,
          "maximum": 200,
          "description": "Maximum number of locations to keep in navigation history"
        },
        "reqnrollNavigator.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging"
        },
        "bddGuardian.coach.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable BDD Coach - best practices validator for .feature files"
        },
        "bddGuardian.coach.severityOverrides": {
          "type": "object",
          "default": {},
          "description": "Override severity for specific rules. Keys are rule IDs (e.g., \"coach/scenario-name\"), values are \"error\", \"warning\", \"hint\", \"info\", or \"off\"",
          "additionalProperties": {
            "type": "string",
            "enum": [
              "error",
              "warning",
              "hint",
              "info",
              "off"
            ]
          }
        },
        "bddGuardian.coach.disabled": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "List of rule IDs to disable entirely"
        },
        "bddGuardian.coach.uiLeakage.keywords": {
          "type": "array",
          "default": null,
          "items": {
            "type": "string"
          },
          "description": "Custom keywords to detect UI implementation details in steps. If null, uses default keywords (click, button, link, etc.)"
        },
        "bddGuardian.coach.stepLength.max": {
          "type": "number",
          "default": 120,
          "minimum": 50,
          "maximum": 300,
          "description": "Maximum step length before warning"
        },
        "bddGuardian.coach.statusBar.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show Coach status in status bar when viewing .feature files"
        },
        "reqnrollNavigator.maxFilesIndexed": {
          "type": "number",
          "default": 5000,
          "minimum": 100,
          "maximum": 50000,
          "description": "Maximum number of files to index. Increase for large monorepos, decrease for better performance."
        }
      }
    },
    "languages": [
      {
        "id": "gherkin",
        "aliases": [
          "Gherkin",
          "Feature"
        ],
        "extensions": [
          ".feature"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AngHelll/bdd-guardian"
  },
  "homepage": "https://github.com/AngHelll/bdd-guardian#readme",
  "bugs": {
    "url": "https://github.com/AngHelll/bdd-guardian/issues"
  },
  "license": "MIT"
}
